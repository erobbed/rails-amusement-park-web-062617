
<%= label_tag :name %>
<%= @attraction.name %><br>
<%= label_tag :total_number_of_users %>
<%= @attraction.users.count %><br>
<%= label_tag :ticket_requirement %>
<%= @attraction.tickets %><br>
<%= label_tag :happiness_rating %>
<%= @attraction.happiness_rating %><br>
<%= label_tag :nausea_rating %>
<%= @attraction.nausea_rating %><br>



<% if @user.admin %>
    <%= link_to "Edit Attraction", edit_attraction_path %>
  <% else %>
  <%= flash[:message] %>
  <%= form_for @ride do |f| %>
    <%= f.hidden_field :attraction_id  %>
    <%= f.submit "Go on this ride" %>
  <% end %>
<% end %>
